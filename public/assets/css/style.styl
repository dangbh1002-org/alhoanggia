// Prepare for Stylus



// function
border-radius()
  for vendor in vendors
    if (vendor == official){
      border-radius: arguments
    }
    else {
      -{vendor}-border-radius: arguments
    }

fade-out(color, amount = 50%)
  color - rgba(0,0,0,amount)


box-shadow(args...)
  -webkit-box-shadow args
  -moz-box-shadow args
  box-shadow args


transition(args...)
  transition args
  -webkit-transition args
  -moz-transition args
  -o-transition args
  -ms-transition args
  -official-transition args


