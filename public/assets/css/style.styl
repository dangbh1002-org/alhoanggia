    transition letter-spacing 1s ease
    &:hover{
      letter-spacing 1px
      transition letter-spacing 1s ease
    }
  }
}

.product-group{
  position: relative
  margin: 15px auto
  border-radius(5px)
  box-shadow(0 1px 1px 0 shadowColor)
  transition(0.3s)
  overflow hidden
  &:hover{
    box-shadow(0 2px 2px 0 shadowColor)
  }

  .image-group{
    width: 100%
    overflow hidden
    img{
      border-radius(6px)
      width: 100%
      height 2*@width/3
    }
  }

  .info-group{
    position: absolute
    width: 100%
    height: 50px
    bottom: 0
    background-color: fade-out(#fff,10%)
    border-bottom: solid 2px white
    border-bottom-left-radius: 5px
    border-bottom-right-radius: 5px

    .info-name{
      position: absolute
      bottom: 5%
      left: 5%
      h4{
        color: #727272
        font-family: 'Roboto', sans-serif
        font-weight: 300
        text-transform: capitalize
        font-size: medium
      }
    }

    .info-detail{
      position: absolute
      right: 10px
      top: 10px
      bottom: 7px

      p{
        font-family: 'Roboto', sans-serif
        line-height: 130%
        margin-top: auto
        margin-bottom: auto
        color #727272
      }
      .btn2{
        border: solid 2px
        border-radius(100px)
        width: 100%
        height: 100%
        background-color: rgba(0, 0, 0, 0)
        transition(1s easy)
      }
    }
  }
}

