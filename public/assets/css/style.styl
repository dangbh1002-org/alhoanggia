.banner{
  position relative
  background white
  //border-bottom 2px solid fbColor
  .container-fluid{
    padding-right: 0
    padding-left: 0
    margin-right: auto;
    margin-left: auto;
    position: relative;
    .fog{
      margin-top 48px
      background-color white
      z-index 2
      position absolute
      height 100%
      width 100%
      opacity 0.01
    }
    .bannerVideo{
      .video {
        /*height: 90vh;*/

        overflow: hidden;
        position: relative
        z-index: 1;
        width 100%

        #bgvid {
          display: block;
          height: auto;
          min-width: 100%;
          min-height: 100%;

          position: absolute;
          left: 50%;
          top: 50%;
          -moz-transform: translate(-50%, -50%) scale(1);
          -ms-transform: translate(-50%, -50%) scale(1);
          -o-transform: translate(-50%, -50%) scale(1);
          -webkit-transform: translate(-50%, -50%) scale(1);
          transform: translate(-50%, -50%) scale(1);
          width: auto;
          z-index: 1;
        }
      }
    }

  }
}

