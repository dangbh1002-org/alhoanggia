.banner{
  position relative
  background white
  //border-bottom 2px solid fbColor
  .container-fluid{
    padding-right: 0
    padding-left: 0
    margin-right: auto;
    margin-left: auto;
    position: relative;
    .fog{
      margin-top 48px
      background-color white
      z-index 2
      position absolute
      height 100%
      width 100%
      opacity 0.01
    }
    .bannerVideo{
      .video {
        /*height: 90vh;*/

        overflow: hidden;
        position: relative
        z-index: 1;
        width 100%

        #bgvid {
          display: block;
          height: auto;
          min-width: 100%;
          min-height: 100%;
          position: absolute;
          left: 50%;
          top: 50%;
          width: auto;
          z-index: 1;

          -moz-transform: translate(-50%, -50%) scale(1.1);
          -ms-transform: translate(-50%, -50%) scale(1.1);
          -o-transform: translate(-50%, -50%) scale(1.1);
          -webkit-transform: translate(-50%, -50%) scale(1.1);
          transform: translate(-50%, -50%) scale(1.1);

          -webkit-animation-name: coverAnimation; /* Safari 4.0 - 8.0 */
          -webkit-animation-duration: 20s; /* Safari 4.0 - 8.0 */
          -webkit-animation-timing-function: ease-out;
          animation-name: coverAnimation;
          animation-duration: 20s;
          animation-timing-function: ease-out;
        }
      }
    }
    .bannerContent{
      position: absolute;
      left: 50%;
      top: 50%;
      z-index: 2;
      -moz-transform: translate(-50%, -50%) scale(1);
      -ms-transform: translate(-50%, -50%) scale(1);
      -webkit-transform: translate(-50%, -50%) scale(1);
      transform: translate(-50%, -50%) scale(1);
      width: auto;
      img{
        height 100%
        width 100%
      }
      p{
        font-family 'Roboto', sans-serif
        font-size large
        font-weight 300
        color white
      }
      .rectangle{
        border 8px solid white
        h1{
          color white
        }
      }
    }

  }
}

